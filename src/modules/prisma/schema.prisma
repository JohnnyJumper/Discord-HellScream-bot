generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Planet {
  id             Int              @id @default(autoincrement())
  index          BigInt
  name           String           @unique
  sector         String 
  biome          Biome            @relation(fields: [biomeId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  biomeId        Int
  hazards        Hazard[]
  hash           BigInt
  waypoints      BigInt[]
  maxHealth      BigInt
  health         BigInt
  disabled       Boolean
  initialOwner   String
  currentOwner   String
  regenPerSecond Float
  event          PlanetEvent?     @relation(fields: [eventId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  eventId        Int?
  statistics     PlanetStatistics @relation(fields: [statisticsId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  statisticsId   Int @unique
  attacking      BigInt[]
} 

model Biome {
  id          Int       @default(autoincrement()) @id
  name        String
  description String
  planets     Planet[]
}

model Hazard {
  id          Int       @default(autoincrement()) @id
  name        String
  description String
  planetId    Int
  planet      Planet    @relation(fields: [planetId], references: [id], onUpdate: Cascade, onDelete: Cascade) 
}

model PlanetEvent {
  id                Int       @default(autoincrement()) @id
  eventType         BigInt
  faction           String
  health            BigInt
  maxHealth         BigInt
  startTime         DateTime
  endTime           DateTime
  campaignId        BigInt
  jointOperationIds BigInt[]
  planets           Planet[]
}

model PlanetStatistics {
  id                 Int       @default(autoincrement()) @id
  missionsWon        BigInt
  missionsLost       BigInt
  missionTime        BigInt
  terminidKills      BigInt
  automatonKills     BigInt
  illuminateKills    BigInt
  bulletsFired       BigInt
  bulletsHit         BigInt
  timePlayed         BigInt
  deaths             BigInt
  revives            BigInt
  friendlies         BigInt
  missionSuccessRate BigInt
  accuracy           BigInt
  playerCount        BigInt
  planet             Planet?
}

model News {
  id                Int       @default(autoincrement()) @id
  published         DateTime
  message           String
}