generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Planet {
  id             Int              @id @default(autoincrement())
  index          BigInt           @unique
  name           String           @unique
  sector         String
  biome          Biome            @relation(fields: [biomeId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  biomeId        Int
  hazards        Hazard[]
  hash           BigInt
  waypoints      BigInt[]
  maxHealth      BigInt
  health         BigInt
  disabled       Boolean
  initialOwner   String
  currentOwner   String
  regenPerSecond Float
  event          PlanetEvent?
  statistics     PlanetStatistics @relation(fields: [statisticsId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  statisticsId   Int              @unique
  attacking      BigInt[]

  @@index([index])
}

model Biome {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  planets     Planet[]
}

model Hazard {
  id          Int    @id @default(autoincrement())
  name        String
  description String
  planetId    Int
  planet      Planet @relation(fields: [planetId], references: [id], onUpdate: Cascade, onDelete: Cascade)
}

model PlanetEvent {
  id                Int      @id @default(autoincrement())
  eventType         BigInt
  faction           String
  health            BigInt
  maxHealth         BigInt
  startTime         DateTime
  endTime           DateTime
  campaignId        BigInt
  jointOperationIds BigInt[]
  planetIndex       BigInt   @unique
  planet            Planet   @relation(fields: [planetIndex], references: [index], onDelete: Cascade)
}

model PlanetStatistics {
  id                 Int     @id @default(autoincrement())
  missionsWon        BigInt
  missionsLost       BigInt
  missionTime        BigInt
  terminidKills      BigInt
  automatonKills     BigInt
  illuminateKills    BigInt
  bulletsFired       BigInt
  bulletsHit         BigInt
  timePlayed         BigInt
  deaths             BigInt
  revives            BigInt
  friendlies         BigInt
  missionSuccessRate BigInt
  accuracy           BigInt
  playerCount        BigInt
  planet             Planet?
}

model CurrentWarStatus {
  id               Int                  @id @default(autoincrement())
  started          DateTime
  ended            DateTime
  now              DateTime
  clientVersion    String
  factions         String[]
  impactMultiplier Float
  statistics       CurrentWarStatistics @relation(fields: [statisticsId], references: [id])
  statisticsId     Int                  @unique
}

model CurrentWarStatistics {
  id                 Int               @id @default(autoincrement())
  missionsWon        BigInt
  missionsLost       BigInt
  missionTime        BigInt
  terminidKills      BigInt
  automatonKills     BigInt
  illuminateKills    BigInt
  bulletsFired       BigInt
  bulletsHit         BigInt
  timePlayed         BigInt
  deaths             BigInt
  revives            BigInt
  friendlies         BigInt
  missionSuccessRate BigInt
  accuracy           BigInt
  playerCount        BigInt
  currentWar         CurrentWarStatus?
}

model News {
  id        Int      @id @default(autoincrement())
  published DateTime
  message   String
}
